{
  "manifest_version": 3,
  "name": "szurubooru-toolkit",
  "version": "0.1",
  "description": "Interact with your szurubooru-toolkit directly from your browser.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  }
}
