{
  "manifest_version": 2,
  "name": "szurubooru-toolkit",
  "version": "0.8",
  "description": "Interact with your szurubooru-toolkit directly from your browser.",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "http://localhost:5000/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    }
  },
  
  "icons": {
    "16": "images/icon16.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "szurubooru-toolkit@fkosquad.moe"
    }
  }
} 
